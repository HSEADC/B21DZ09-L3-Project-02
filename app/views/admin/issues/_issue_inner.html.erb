<%= image_tag issue.post_image.url, class: "image-outer"  %>

  <p>
    <strong>Name:</strong>
    <%= issue.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= issue.description %>
  </p>

  <p>
  <strong>Added by</strong>
  <%= issue.user.email %>
  </p>

</div>
