  </div>

  <div>
    <%= form.label :description, style: "display: block", value: "Описание" %>
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.label :body, style: "display: block", value: "Контент" %>
    <%= form.text_field :body %>
  </div>

  <div>
    <%= form.submit value: "ОК" %>
  </div>
