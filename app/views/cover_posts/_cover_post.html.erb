<%= link_to artist_issue_post_path(cover_post.issue.artist, cover_post.issue, cover_post) do %>
  
  <div id="<%= dom_id cover_post %>", class="M_RectangleCoverCard">
    
    <%= image_tag cover_post.post_image.url, class: "image-outer"  %>
    <div class="M_TextInRectangleCoverCards"
    <p>
      <strong>Про обложку</strong>
      <%= cover_post.name %>
    </p>
    
    <p>
      <strong>Теги</strong>
      <% cover_post.tag_list.each do |tag| %>
        <span>
          <%= tag %>
        </span>
      <% end %>
    </p>

    <div style="display: inline-flex; align-items: center; gap: 20px;">
      <%= image_tag cover_post.user.avatar.url, style: "width: 50px; border-radius: 8px;" %>
      <p>
        <strong>Автор</strong>
        <%= cover_post.user.email %>
      </p>
    </div>

    <p>
      <strong>Описание</strong>
      <%= cover_post.description %>
    </p>

    <p>
      <strong>Комментариев</strong>
      <%= cover_post.comments.count %>
    </p>

  </div>
  </div>

<% end %>