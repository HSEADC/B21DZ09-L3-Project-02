<%= link_to artist_issue_post_path(promo_post.issue.artist, promo_post.issue, promo_post) do %>

  <div id="<%= dom_id promo_post %>", class="outer-card">

    <%= image_tag promo_post.post_image.url, class: "image-outer"  %>

    <p>
      <strong>Про промо</strong>
      <%= promo_post.name %>
    </p>

    <p>
      <strong>Теги</strong>
      <% promo_post.tag_list.each do |tag| %>
        <span>
          <%= tag %>
        </span>
      <% end %>
    </p>

    <div style="display: inline-flex; align-items: center; gap: 20px;">
      <%= image_tag promo_post.user.avatar.url, style: "width: 50px; border-radius: 8px;" %>
      <p>
        <strong>Автор</strong>
        <%= promo_post.user.email %>
      </p>
    </div>

    <p>
      <strong>Описание</strong>
      <%= promo_post.description %>
    </p>
    
  </div>

<% end %>