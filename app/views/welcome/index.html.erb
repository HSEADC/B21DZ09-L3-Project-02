            <%= image_tag "Eartheater.jpeg", :class => "A_Avatar" %>
            <p class="A_PSmallMedium">
            Eartheater
            </p>
            </div>
        </div>
        <%= image_tag holes.sample, class: "CoverHole" %>
        </div>
    </div>
    <div class="M_VideoCardAdditional">
    <%= image_tag "DojaVideo.png", :class => "A_VideoCardPic" %>
