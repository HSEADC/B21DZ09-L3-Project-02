<% holes = ["Cassettes.svg", "Ellipses.svg", "Gears.svg"] %>
<% holesbottom = ["Q_Cassette.svg", "Q_Ellipse.svg", "Q_Gear.svg"] %>

<div class="M_BannerInHeader">
    <div class="A_BannerPicInHeader">
        <%= image_tag "FirstBannerMain.png", :class => "A_FirstBannerMain displayvisible" %>
        <%= image_tag "FirstBannerMainMobile.png", :class => "A_FirstBannerMain displaynone" %>
    </div>
    <div class="C_ArtistAndRelease">
        <div class="M_PersonBig">
            <%= image_tag "Eartheater.jpeg", :class => "A_Avatar" %>
            <p class="A_PSmallMedium">Eartheater</p>
        </div>
        <p class="A_PSmallMedium">«Powders», 2023</p>
    </div>
    <button class="A_ButtonAddArticleBlack">
        <%= image_tag "PlusIcon.svg", :class => "A_PlusIcon" %>
        <p>Написать<br>о новинке</p>
